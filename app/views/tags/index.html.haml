= render partial: 'shared/header'

.wrapper
  .mid_wrapper
    .container
      .search_wrapper
        .search_container
          -# タグ一覧
          = render partial: "shared/tags",locals: {tag_cs: @tag_cs,tag_bs: @tag_bs,tag_gs: @tag_gs}

      .main_container
        .clothes_index
          .posts_title #{@tag}に関する投稿
          
          -# 衣類一覧
          - if @post_cs.present?
            = render partial: "shared/index",locals: {posts: @post_cs}

          -# 本一覧
          - if @post_bs.present?
            = render partial: "shared/index",locals: {posts: @post_bs}
            
          -# 雑貨一覧
          - if @post_gs.present?
            = render partial: "shared/index",locals: {posts: @post_gs}




= render partial: 'shared/footer'