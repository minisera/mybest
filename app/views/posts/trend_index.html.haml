= render partial: 'shared/header'

.wrapper
  .mid_wrapper
    .container
      .search_wrapper
        .search_container
          = render partial: "shared/tags",locals: {tag_cs: @tag_cs,tag_bs: @tag_bs,tag_gs: @tag_gs}
      .main_container
        -# 服一覧
        - if @post_c_ranks.present?
          .posts_title Clothes
          = render partial: "shared/index",locals: { posts: @post_c_ranks}
        
        -# 本一覧
        - if @post_b_ranks.present?
          .posts_title Books
          = render partial: "shared/index",locals: { posts: @post_b_ranks}

        -# 雑貨一覧
        - if @post_g_ranks.present?
          .posts_title Goods
          = render partial: "shared/index",locals: { posts: @post_g_ranks}

= render partial: 'shared/footer'