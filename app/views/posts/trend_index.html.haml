= render partial: 'shared/header'

.wrapper
  .mid_wrapper
    .container
      -# サーチボックス
      = render partial: "shared/tags",locals: {tag_cs: @tags_c,tag_bs: @tags_b,tag_gs: @tags_g}

      .main_container
        -# 服一覧        
        - if @posts_c.present?
          .posts_title Clothes
          = render partial: "shared/index",locals: { posts: @posts_c}
          .posts_link
            = link_to "衣類の一覧へ",clothes_path

        -# 本一覧
        - if @posts_b.present?
          .posts_title Books
          = render partial: "shared/index",locals: { posts: @posts_b}
          .posts_link
            = link_to "本の一覧へ",books_path,class: "posts_link"

        -# 雑貨一覧
        - if @posts_g.present?
          .posts_title Goods
          = render partial: "shared/index",locals: { posts: @posts_g}
          .posts_link
            = link_to "雑貨の一覧へ",goods_path,class: "posts_link"

= render partial: 'shared/footer'