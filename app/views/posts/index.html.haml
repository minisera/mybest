.wrapper
  .container
    .clothes_index
      .posts_title Clothes
      .tags
        .trending_tag Trending
        .new_tag New
      .posts_index
        - if @post_cs
          - @post_cs .each do |post|
            .post_item_list
              .post_image
                = link_to image_tag(post.image),post_c_path(post)
              .post_main 
                .post_title
                  = post.title
                .post_favorite ♡10
                .post_info
                  .post_user
                    .user_avatar
                      = link_to image_tag(post.user.profile_image),user_path(post.user)
                    .post_user_name 
                      = post.user.name
                  .post_date 1日前
    .clothes_index
      .posts_title Books
      .tags
        .trending_tag Trending
        .new_tag New
      .posts_index
        - if @post_bs
          - @post_bs .each do |post|
            .post_item_list
              .post_image
                = link_to image_tag(post.image),post_b_path(post)
              .post_main 
                .post_title
                  = post.title
                .post_favorite ♡10
                .post_info
                  .post_user
                    .user_avatar
                      = link_to image_tag(post.user.profile_image),user_path(post.user)
                    .post_user_name 
                      = post.user.name
                  .post_date 1日前

