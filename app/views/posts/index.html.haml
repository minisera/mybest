= render partial: 'shared/header'

.wrapper
  .mid_wrapper
    .container
      .search_wrapper
        .search_container
          .search_tabs
            = link_to "トレンド一覧表示",trend_index_posts_path,class: "search_tab"
            = link_to "新着一覧表示",root_path,class: "search_tab"
          .search_bar
            - if @tags.present?
              - @tags.each do |tag|
                = link_to "#{tag.name}(#{tag.taggings_count})",tags_path(tag: tag.name)
            - else
              %p 登録されているタグはありません
          .search_tags
      .main_container
        .clothes_index
          .posts_title 
            Clothes
          .posts_index
            - if @post_cs
              - @post_cs .each do |post|
                .post_item_list
                  .post_image
                    = link_to image_tag(post.image),post_c_path(post)
                  .post_main 
                    .post_title
                      = post.title
                    - if user_signed_in?
                      - if post.liked_by?(current_user)
                        = link_to post_c_like_c_path(post.id),method: :delete do
                          %span= fa_icon "thumbs-up alredy_icon"
                          = post.like_cs.count 
                      - else
                        = link_to post_c_like_c_path(post.id),method: :post do
                          %span= fa_icon "thumbs-up yet_icon"
                          = post.like_cs.count
                    - else
                      %p
                        %span= fa_icon "thumbs-up"
                        = post.like_cs.count
                    .post_info
                      .post_user
                        .user_avatar
                          = link_to image_tag(post.user.profile_image),user_path(post.user)
                        .post_user_name 
                          = post.user.name
                      .post_date 1日前
