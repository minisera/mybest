= render 'shared/header'

.post_show_wrapper
  .post_show_container
    .top_container
      .post_title
        = @post_c.title
      .post_user
        .user_name
          = @post_c.user.name
        = link_to image_tag(@post_c.user.profile_image),user_path(@post_c.user),class: "user_image"
    .midle_container
      .post_image
        = image_tag @post_c.image
    .bottom_wrapper 
      .bottom_container
        - if user_signed_in?
          - if @post_c.picked_by?(current_user)
            = link_to post_c_pick_c_path(@post_c.id),method: :delete do
              %span= fa_icon "get-pocket alredy_icon"
              = @post_c.pick_cs.count 
          - else
            = link_to post_c_pick_c_path(@post_c.id),method: :post do
              %span= fa_icon "get-pocket yet_icon"
              = @post_c.pick_cs.count
        - else
          %p
            %span= fa_icon "thumbs-up"
            = @post_c.pick_cs.count
        - if user_signed_in?
          - if @post_c.liked_by?(current_user)
            = link_to post_c_like_c_path(@post_c.id),method: :delete do
              %span= fa_icon "thumbs-up alredy_icon"
              = @post_c.like_cs.count 
          - else
            = link_to post_c_like_c_path(@post_c.id),method: :post do
              %span= fa_icon "thumbs-up yet_icon"
              = @post_c.like_cs.count
        - else
          %p
            %span= fa_icon "thumbs-up"
            = @post_c.like_cs.count
        .post_place
          .form_title
            = fa_icon "globe"
            出会った場所
          .form_content
            = @post_c.place
        .post_brand
          .form_title
            = fa_icon "bookmark"
            ブランド
          .form_content
            = @post_c.brand
        .post_story
          .form_title
            = fa_icon "map"
            出会いのストーリ−
          .form_text
            = @post_c.story
        .post_evidence
          .form_title
            = fa_icon "star"
            お気に入りのポイント
          .form_text
            = @post_c.evidence
        = link_to "この人のマイページに行く",user_path(@post_c.user)
        - if current_user
          .post_edit
            = link_to "お気に入りを編集する",edit_post_c_path(@post_c.id)
          .post_destroy
            = link_to 'お気に入りを削除する',post_c_path(@post_c),method: :delete,data: { confirm: "本当に削除しますか？"}


= render partial: 'shared/footer'