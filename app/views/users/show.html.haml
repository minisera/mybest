= render 'shared/header'

.profile_top
  .profile_container
    - if @user.profile_image.attached?
      = image_tag @user.profile_image,class: "user_profile_image"
    .profile_main
      .profile_name_edit
        .user_name= @user.name
        - if current_user == @user
          .user_edits
            = link_to '設定',edit_user_registration_path,class: "user_edit"
            = link_to 'プロフィール編集',edit_user_path(current_user),class: "user_edit"
        - if current_user != @user
          - if @user.followed_by?(current_user)
            = link_to "フォロー中",user_relationships_path(@user.id),method: :delete,class: "follow_btn"
          - else  
            = link_to "フォローする",user_relationships_path(@user.id),method: :create,class: "follow_btn"
      .user_profile
        = @user.profile
      .user_follows
        .user_follow
          = link_to follows_user_path(@user) do
            = @user.followings.count
            %span フォロー中
        .user_follow
          = link_to followers_user_path(@user) do
            = @user.followers.count
            %span フォロワー
.wrapper
  .container_wrapper
    .tags
      .new_tags new_tag
      .pickup_tags pickup_tag
    .container
      .index_wrapper
        .index_container
          .posts_title Clothes
          .clothes_index
            .posts_index
              - if @user.post_cs
                - @user.post_cs .each do |post|
                  .post_item_list
                    .post_image
                      = link_to image_tag(post.image),post_c_path(post)
                    .post_main 
                      .post_title
                        = post.title
                      .post_favorite ♡10
                      .post_info
                        .post_date 1日前
= render partial: 'shared/footer'