.posts_index
  - if posts
    - posts .each do |post|
    
      -# 服一覧
      - if post.class.name == "PostC"
        .post_item_list
          .post_image
            = link_to image_tag(post.image),post_c_path(post)
          .post_main 
            .post_title
              = post.title
            - if user_signed_in?
              - if post.liked_by?(current_user)
                = link_to post_c_like_c_path(post.id),method: :delete do
                  %span= fa_icon "thumbs-up alredy_icon"
                  = post.like_cs.count 
              - else
                = link_to post_c_like_c_path(post.id),method: :post do
                  %span= fa_icon "thumbs-up yet_icon"
                  = post.like_cs.count
            - else
              %p
                %span= fa_icon "thumbs-up"
                = post.like_cs.count
            .post_info
              .post_user
                .user_avatar
                  = link_to image_tag(post.user.profile_image),user_path(post.user)
                .post_user_name 
                  = post.user.name
              .post_date
                %time(datetime="#{post.created_at}")= "#{time_ago_in_words(post.created_at)}前"
      
